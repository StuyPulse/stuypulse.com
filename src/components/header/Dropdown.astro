---
import type { NavType } from "@types";
import Nav from "./Nav.astro";

export interface Props {
  nav: NavType;
}

const { nav } = Astro.props;
---

<style>
  @media screen and (max-width: 992px){
    .dropdown-menu {
      margin-left: 30px !important;
    }
  }
  
  @media screen and (min-width: 992px) {
    .dropdown {
      position: relative;
      top: 7.5px;
    }
    ul {
      background-color: rgb(246, 251, 255) !important;
      border-top: 2px !important;
      border-top-color: rgb(246, 251, 255) !important;
    }
    .dropdown-toggle {
      position: relative;
      top: -7.5px;
    }
    /* .dropdown-menu:nth-of-type(1) {
    background-color: skyblue;
  } */
  }
</style>
<li class="nav-item dropdown">
  <a
    class="nav-link dropdown-toggle text-black"
    href={nav.href}
    role="button"
    data-bs-toggle="dropdown"
    aria-expanded="false"
  >
    {nav.name}
  </a>
  <ul class="dropdown-menu rounded-0 p-2 border-none">
    {
      nav.dropdown &&
        nav.dropdown.map((_nav) => (
          <li>
            <Nav nav={_nav} />
          </li>
        ))
    }
  </ul>
</li>
