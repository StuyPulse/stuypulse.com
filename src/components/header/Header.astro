---
import type { NavType } from "@types.js";
import Nav from "./Nav.astro";
import Dropdown from "./Dropdown.astro";

const navs = (await import("@data/navbar.yml")).default;
---

<nav class="navbar navbar-expand-lg fixed-top mb-3">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="/">
      <img src="/694_white.svg" width="32px" height="32px" />
      StuyPulse
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div
      class="collapse navbar-collapse flex-row-reverse"
      id="navbarNavDropdown"
    >
      <div style="height:10px"></div>
      <ul class="navbar-nav">
        {
          navs.map((nav: NavType) =>
            nav.dropdown ? <Dropdown nav={nav} /> : <Nav nav={nav} />
          )
        }
      </ul>
    </div>
  </div>
</nav>

<style>
  .navbar {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    background: linear-gradient(
      180deg,
      rgba(224, 0, 0, 1) 59px,
      rgb(246, 251, 255) 0px
    );
  }

  @media screen and (min-width: 992px) {
    .navbar {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
        0 6px 20px 0 rgba(0, 0, 0, 0.19);
      background: linear-gradient(
        300deg,
        rgb(246, 251, 255, 1) 34em,
        rgba(224, 0, 0, 1) 10em
      );
    }
  }
</style>
