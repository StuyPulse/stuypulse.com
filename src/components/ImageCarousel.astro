---

<style>
  .carousel-control-next-icon:hover,
  .carousel-control-prev-icon:hover {
    background-color: rgba(0, 0, 0, 1);
    border-radius: 50%;
  }
</style>

<div
  id="ImageCarousel"
  class="carousel slide pointer-event"
  data-bs-ride="true"
>
  <div class="carousel-inner">
    {
      imageData.map((image: CarouselItemType) => (
        <div class="carousel-item">
          <img src={image.img} class="d-block w-100" alt="..." />
          <div class="carousel-caption text-start bg-dark">
            <h4>{image.caption}</h4>
            <p>Some representative placeholder content for the second slide.</p>
          </div>
        </div>
      ))
    }
    <script>
      let firstImage =
        document.getElementsByClassName('carousel-inner')[0].children[0];
      firstImage.className += ' active';
    </script>
    <div class="carousel-indicators">
      {
        imageData.map((image: CarouselItemType) => (
          <button type="button" data-bs-target="#ImageCarousel" data-bs-slide-to={image.slideNum} aria-current="true"
          />
        ))
      }
      <script>
        let firstIndicator = document.getElementsByClassName('carousel-indicators')[0].children[0];
        firstIndicator.className += ' active';
      </script>
    </div>
  </div>
  
  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#ImageCarousel"
    data-bs-slide="prev"
    ><span
      class="carousel-control-prev-icon"
      aria-hidden="true"
      style="background-color: rgba(0, 0, 0, 0.5); border-radius: 50%;"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#ImageCarousel"
    data-bs-slide="next"
  >
    <span
      class="carousel-control-next-icon"
      style="background-color: rgba(100, 0, 0, 0.5); border-radius: 50%;"
      aria-hidden="true"
      data-bs-theme="dark"
      ></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
