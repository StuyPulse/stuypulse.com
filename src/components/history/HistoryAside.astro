---
import { CollectionEntry, getCollection } from 'astro:content';

const history = await getCollection('history');
const sortedHistory:CollectionEntry<'history'>[] = [];
history.map((entry) => sortedHistory.unshift(entry));
export interface Props {
  activeYear?: string;
}
---

{
  sortedHistory.map((entry) => (
    <div class="row no-gutters align-items-center">

      <a href={"/about/history/"+entry.slug} class={"pl-5 pb-1 pt-1 align-items-center "+ (entry.slug==="2022"&&"current") }>
        <p class={(entry.slug==="2022"?"current":"year") + " mb-0"} >{entry.slug}</p>
      </a>
    </div>
    
  ))
}

<style>
  p {
    margin-bottom: 0.25rem;
  }
  
  .row:hover {
    background-color: rgb(235, 235, 238);
  }
  .row:active {
    background-color: rgb(224, 221, 221);
  }
  a.current {
    background-color: rgb(224, 0, 0);
    color: rgb(235, 235, 238) !important;
  }
</style>
