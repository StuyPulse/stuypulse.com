---
import type {SponsorType} from '@types';

export interface Props {
	sponsor: SponsorType;
  size: string;
  tSize: string;
}

const { sponsor, size, tSize } = Astro.props;
---
<style define:vars={{size, tSize}}>
  .sponsor-container {
    height: var(--size) !important;
  }

  p {
    font-size: var(--tSize) !important;
  }

  img {
    height: var(--size) !important;
    object-fit: contain;
  }
</style>

<div class = "sponsor-container d-flex justify-content-center align-items-center">
{sponsor.logo ?
  <div>
    {sponsor.site == null ?
      <img src={sponsor.logo} class="d-block w-100" alt={sponsor.name} />
      :
      <a href = {sponsor.site} target = "_blank">
        <img src={sponsor.logo} class="d-block w-100" alt={sponsor.name} />
      </a>
    }
  </div>
  :
  <div>
    <p class="fw-bold d-flex align-items-center text-center">{sponsor.name}</p>
  </div>
}
</div>