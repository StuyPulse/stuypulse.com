---
import type { SponsorType } from "@types";
import { Picture } from "astro-imagetools/components";

export interface Props {
  sponsor: SponsorType;
  height: string;
  width: string;
  tSize: string;
}

const { sponsor, height, width, tSize } = Astro.props;
---

<style define:vars={{ height, width, tSize }}>
  .sponsor-container {
    height: var(--height);
    width: var(--width);
    display: flex;
    justify-content: center;
    align-items: center;
    /* background-color: aqua; */
  }

  p {
    display: flex;
    font-size: var(--tSize);
    align-items: center;
    text-align: center;
  }

  img {
    display: block;
    height: var(--height);
    width: var(--width);
    object-fit: contain;
  }
</style>

<div class="sponsor-container">
  {
    sponsor.logo ? (
      <div>
        {sponsor.site == null ? (
          <Picture src={sponsor.logo} alt={sponsor.name} attributes={{
            // @ts-ignore
            class: "d-block"
          }}/>
        ) : (
          <a href={sponsor.site} target="_blank">
            <Picture src={sponsor.logo} alt={sponsor.name} attributes={{
              // @ts-ignore
              class: "d-block"
            }}/>
          </a>
        )}
      </div>
    ) : (
      sponsor.site ? (
      <p>
        <strong>
          <a href={sponsor.site} target="_blank">{sponsor.name}</a>
        </strong>
      </p>
      ) : (
        <p>
          <strong>{sponsor.name}</strong>
        </p>
      )
    )
  }
</div>
