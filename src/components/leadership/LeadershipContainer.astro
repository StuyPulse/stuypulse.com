---
import type { LeadershipType } from "@types";

import { Picture } from "astro-imagetools/components";

export interface Props {
  leadership: LeadershipType;
  height: string;
  width: string;
  tSize: string;
  hSize: string;
}

const { leadership, height, width, tSize, hSize } = Astro.props;
---

<style define:vars={{ height, width, tSize, hSize }}>
  .leadership-container {
    height: var(--height);
    width: var(--width);
  }
  .card-header {
    background: linear-gradient(
      270deg,
      rgba(255, 255, 255, 1) 6rem,
      rgba(224, 0, 0, 1) 7.5rem
    );
  }

  .card-body {
  }

  p {
    font-size: var(--tSize);
    text-indent: 1.5rem;
    text-align: justify;
  }
  h3 {
    font-size: var(--hSize);
    margin: 5px;
  }
</style>

<div class="leadership-container">
  <div class="card">
    <div class="card-header">
      <div class="row no-gutters">
        <div class="col-7 d-inline-block">
          <h3 class="text-white">{leadership.name}</h3>
        </div>
        <div class="col-5 d-inline text-nowrap text-end">
          <a href={"/../about/departments#" + leadership.department} >
            {
              [
                "Software Engineering",
                "Engineering",
                "Business",
                "Strategy",
              ].includes(leadership.department) ? (
                <img src={"/../../" + leadership.department.split(" ")[0].toLowerCase() + ".svg"} alt={leadership.department} width="40px" />
              ) : (
                <p class="text-white">{leadership.department}</p>
              )
            }
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-2 no-gutters">
    <div class="col-md-3 no-gutters" style="max-width:250px; padding:25px; margin: auto;">
      {
        leadership.image ? (
          <Picture src={leadership.image} alt={leadership.name} />
        ) : (
          <strong>
            <h1 class="fw-bold text-center">{leadership.name}</h1>
          </strong>
        )
      }
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h3 class="card-text">{leadership.position}</h3>
        <p class="card-text">{leadership.description}</p>
      </div>
    </div>
  </div>
</div>
