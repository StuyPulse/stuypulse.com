---
import type { LeadershipType } from "@types";
import { Picture } from "astro-imagetools/components";

export interface Props {
  leadership: LeadershipType;
  height: string;
  width: string;
  tSize: string;
}

const { leadership, height, width, tSize } = Astro.props;
---

<style define:vars={{ height, width, tSize }}>
  .leadership-container {
    height: var(--height);
    width: var(--width);
  }

  p {
    font-size: var(--tSize);
    align-items: center;
    text-align: center;
  }
</style>

<div class="leadership-container">
  <div class="card">
    <div class="card-header">
      <h3>{leadership.position}</h3>
    </div>
    <div class="row no-gutters">
      <div class="col-md-4">
        {
          leadership.image ? (
            <Picture src={leadership.image} alt={leadership.name} />
            // <img class="card-img" src={leadership.image} alt={leadership.name} />
          ) : (
            <strong>
              <h4>{leadership.name}</h4>
            </strong>
          )
        }
      </div>
      <div class="card-body">
        <div class="col-sm-12">
          <h4 class="card-text">{leadership.name}</h4>
          <p class="card-text">{leadership.description}</p>
        </div>
      </div>
    </div>
  </div>
</div>
