---
import PageSite from './PageSite.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---
<PageSite title={title} description={description}>
  <h1>{title}</h1>
  <slot />
</PageSite>
