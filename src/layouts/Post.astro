---
import PageSite from './PageSite.astro';

export interface Props {
	content: {
		title: string;
		description: string;
    link?: string;
	};
}

const {
	content: { title, description, link},
} = Astro.props;
---
<style>
  .row {
    margin-left: 15vw;
    margin-right: 15vw;
  }
</style>

<PageSite title={title} description={description}>
  <div class = "row">
    <div class="col">
      <h1>{title}</h1>
      <slot />
      {
        link && 
        <iframe src={link} width="100%" height="700px"></iframe>
      }
    </div>
  </div>
</PageSite>
